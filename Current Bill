#include<stdio.h>
int main()
{
    float u,t,x;
    scanf("%f",&u);
    if (u<200)
    {
        x=u*1.20;
    }
    else if (u==200 || u<400)
    {
        x=u*1.50;
    }
    else if (u==400 || u<600)
    {
        x=u*1.80;
    }
    else if (u>=600)
    {
        x=u*2;
    }
    if (u>400)
    {
        t=(x*0.15)+x;
    }
    else 
    {
        t=x+100;
    }
    printf("%.2f",t);
    
}
