#include <stdio.h>

int main() {
    float diagonal1, diagonal2;
    printf("Enter the length of the first diagonal: ");
    scanf("%f", &diagonal1);
    printf("Enter the length of the second diagonal: ");
    scanf("%f", &diagonal2);
    float area = 0.5 * diagonal1 * diagonal2;
    printf("Area of the rhombus: %f\n", area);
    return 0;
}
